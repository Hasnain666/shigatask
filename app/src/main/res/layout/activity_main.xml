<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baaa"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/appslogan"
        android:layout_width="385dp"
        android:layout_height="116dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="-95dp"
        android:fontFamily="@font/neuton_bold"
        android:text="SHIGA TASKS!"
        android:textColor="#0E0E0E"
        android:textSize="30sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/btnLogout"
        android:layout_width="284dp"
        android:layout_height="166dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/beginthelearning"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="180dp"
        android:src="@drawable/round_bk3" />

    <TextView
        android:id="@+id/tag3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tag1"
        android:layout_marginTop="134dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="LOG OUT"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/beginthelearning"
        android:layout_width="284dp"
        android:layout_height="166dp"
        android:layout_below="@+id/appslogan"
        android:layout_centerInParent="true"
        android:layout_marginTop="-77dp"
        app:srcCompat="@drawable/round_bk3" />

    <TextView
        android:id="@+id/tag1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appslogan"
        android:layout_marginTop="-22dp"
        android:fontFamily="@font/alata"
        android:gravity="center"
        android:text="USEFUL LINKS"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>

